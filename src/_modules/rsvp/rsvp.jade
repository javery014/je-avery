mixin rsvp(spec)
	- spec = spec || {}
	- spec.__class = spec.__class || ''

	.rsvp-container
		.rsvp-outer
			.header-container
				h1.rsvp-header RSVP
			.rsvp-inner
				#firstPage
					form(id="fetch-name" name="fetchName")
						p.first-name
							input(id="firstName" type="text" name="firstName" placeholder="First Name")
						p.last-name
							input(type="text" id="lastName" name="lastName" placeholder="Last Name")
						p.submit-container
							button Next
				#secondPage
					h2#rsvpGreeting Hello&nbsp;
						span#rsvpGreetingName
					.border
					form(name="submitRsvp" action="thank-you" netlify)
						p
							input(type="radio" name="attending" value="no" id="notAttending")
							label(for="notAttending") Decline with regret
						p
							input(type="radio" name="attending" value="yes" id="attending")
							label(for="attending") Accept with excitement
						p.sub-text-field
							input(type="number" id="numInParty" name="numInParty" placeholder="Number attending in party" data-required-if="attending,yes")
						p
							button SUBMIT
					#error-container
					form(name="contact" action="thank-you" netlify)
						p
							label Your Name:
							input(type="text" name="name")
						p
							label Your Email
							input(type="email" name="email")
						p
							label Message
							textarea(name="message")
						p
							<button>Send

